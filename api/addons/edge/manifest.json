{
    "manifest_version": 3,
    "name": "知识图谱助手",
    "version": "1.0",
    "description": "知识图谱编辑工具",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:4200/*",
        "http://localhost:3000/*",
        "http://localhost/*"
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}